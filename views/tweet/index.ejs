<% if (data.tweets.length == 0) { %>
  <div class="alert alert-info" style="margin-top: 15px;">
    <%= emptyMessage %>
  </div>
<% } %>
<div class="container" style="margin-top: 20px;">
	<% _.each(data.tweets, function(tweet) { %>
	  <div class="media">
		<a class="pull-left" href="/<%= tweet.author.username %>">
		  <img class="media-object" src="/photo/show/<%- tweet.author.id %>/64" alt="<%= tweet.author.username %>">
		</a>
		<div class="media-body">
		  <h4 class="media-heading">
  			<a href="/<%= tweet.author.username %>">
  			  <% if (tweet.author.name) { %>
  				  <%= tweet.author.name %>
  			  <% } else { %>
  				  <%= tweet.author.username %>
  			  <% } %>
  			</a>
		  </h4>
		  <p>
  			<%- tweet.content.replace(/(#([^\s]*))/g, '<a href="/search/hash:$2">$1</a>').replace(/(@([^\s]*))/g, '<a href="/$2">$1</a>') %>
        <% if (tweet.location) { %>
          <span class="label label-info">Somewhere around <%= tweet.location %></span>
        <% } %>
		  </p>
		  <a href="/tweet/reply">Reply</a>
		</div>
	  </div>
	<% }) %>
</div>
