<div class="container">
  <h3>Users</h3>
  <table class='table'>
    <thead>
      <tr>
        <th>Username</th>
        <th>Bio</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% _.each(users, function(user) { %>
        <tr data-id="<%= user.id %>" data-model="user">
          <td><%= user.username %></td>
          <td>
            <% if (user.bio) { %>
              <%= user.bio %>
            <% } %>
          </td>
          <td>
            <% if (currentUser.id == user.id) { %>
              This is you.
            <% } else if (currentUser.followees.indexOf(user.id) == -1) { %>
              <a href="/follow/<%= user.id %>" class="btn btn-sm btn-primary">Follow</a>
            <% } else { %>
              <a href="/unfollow/<%= user.id %>" class="btn btn-sm btn-primary">Unfollow</a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>